/**
 * @file
 * Default simple view template to display a list of rows.
 *
 * @ingroup views_templates
 */
?>
{% if (options['accordion_filter'])  %}
<div class="accordion-filter">
	<ul class="inv-accordion-filter clearfix">
		<li><a class="active" href="#" data-filter="*"><span>{% trans "Show All" %}</span></a></li>
		{% for key, value in categories %}
		<li>
			<a href="#" class="{{ key }}" data-filter="{{ key }}"><span>{{ value }}</span></a>
		</li>
		{% endfor %}
	</ul>
</div>
{% endif %}

{% set rand = random() %}
<div id="inv-accordion-wrapper-{{ rand }}" class="panel-group accordion">
  {% for key, row in items %}
    <div class="panel panel-default {{ row.class }}">
      <div class="panel-heading">
        <h4 class="panel-title">
            <a class="accordion-toggle collapsed"
             data-toggle="collapse"
             data-parent="#inv-accordion-wrapper-{{ rand }}"
             href="#collapse-{{key}}">
            {{row.title|striptags}}
          </a>
        </h4>
      </div>

      <div id="collapse-{{key}}" class="panel-collapse collapse">
        <div class="panel-body">
          {{ row.content }}
          <!-- @TODO: print 'row.content' -->
        </div>
      </div>
    </div>
  {% endfor %}
</div>
